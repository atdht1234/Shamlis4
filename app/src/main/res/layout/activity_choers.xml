<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffed9d"
    android:orientation="vertical"
    tools:context="com.example.android.shamlis4.Choers">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="what chore to do"
        android:layout_gravity="center"
        android:textSize="50dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/make"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:background="#ffed9d"
            android:text="making laundry" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/hang"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:background="#ffed9d"
            android:text="hanging laundry" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/fold"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:background="#ffed9d"
            android:text="folding laundry" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/clean"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:background="#ffed9d"
            android:text="clean house" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/dishes"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:background="#ffed9d"
            android:text="dishes" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/wash"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:background="#ffed9d"
            android:text="wash floor" />

    </LinearLayout>

</LinearLayout>